<% provide(:title, 'All users') %>

<div class="row">
	<div class="small-12 medium-12 columns">
		<h1>All users</h1>
		<div class="pagination-centered">
			<%= foundation_paginate @users%>
		</div>
		<ul class="users">
			<hr>
		  <% @users.each do |user| %>
		    <li>
		    	<a class="th" href="#">
			      <% if user.avatar.present? %>
							<%= image_tag user.avatar_url  %>
						<% else %>
							<%= image_tag "icon-user-default.png"  %>
						<% end %>
					</a>
		      <%= link_to user.name, user, class: "user-link"%>
		      <% if current_user.admin? && !current_user?(user) %>				    
				    <div class="button-bar right">
						  <ul class="button-group round">
						    <li><%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" }, class: "small button secondary" %></li>
						    <li><a href="#" class="small button secondary">Button 2</a></li>
						    <li><a href="#" class="small button secondary">Button 3</a></li>
						  </ul>					  
						</div>
				  <% end %>
		    </li>
		    <hr>
		  <% end %>
		</ul>
		<div class="pagination-centered">
			<%= foundation_paginate @users%>
		</div>
	</div>
</div>